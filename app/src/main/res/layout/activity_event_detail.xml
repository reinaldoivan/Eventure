<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="eventure.com.eventure.EventDetail"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="eventName"
        android:id="@+id/detail_textView_eventName"
        android:layout_marginStart="23dp"
        android:layout_marginTop="22dp"
        android:layout_alignTop="@+id/detail_imageView"
        android:layout_toEndOf="@+id/detail_imageView"
        android:layout_gravity="right" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Date"
        android:id="@+id/detail_textView_date"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/detail_textView_venue"
        android:layout_alignStart="@+id/detail_textView_venue"
        android:layout_gravity="center_horizontal" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/detail_imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Venue"
        android:id="@+id/detail_textView_venue"
        android:layout_marginTop="17dp"
        android:layout_marginStart="10dp"
        android:layout_below="@+id/detail_textView_eventName"
        android:layout_toEndOf="@+id/imageView2"
        android:layout_gravity="center_horizontal" />
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/imageView2"
        android:src="@drawable/gps"
        android:layout_alignTop="@+id/detail_textView_venue"
        android:layout_alignStart="@+id/detail_textView_eventName" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/imageView3"
        android:src="@drawable/calendar"
        android:layout_alignBottom="@+id/detail_textView_date"
        android:layout_toStartOf="@+id/detail_textView_venue" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/detail_imageView"
        android:layout_alignParentEnd="true">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_below="@+id/detail_imageView"
            android:layout_alignParentEnd="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text=""
                android:id="@+id/detail_textView_eventDetail"
                android:layout_below="@+id/detail_imageView"
                android:layout_alignParentEnd="true" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
