<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Event Name"
        android:id="@+id/list_textView_eventName"
        android:layout_marginTop="16dp"
        android:layout_marginStart="19dp"
        android:layout_below="@+id/list_imageView_image"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Venue"
        android:id="@+id/list_textView_Venue"
        android:layout_marginTop="12dp"
        android:layout_marginStart="15dp"
        android:layout_below="@+id/list_textView_eventName"
        android:layout_toEndOf="@+id/imageView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Date"
        android:id="@+id/list_textView_date"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/list_textView_Venue"
        android:layout_alignStart="@+id/list_textView_Venue" />

    <ImageView
        android:layout_width="fill_parent"
        android:scaleType="fitXY"
        android:layout_height="150dp"
        android:id="@+id/list_imageView_image"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="fill_parent"
        android:scaleType="fitXY"
        android:layout_height="10dp"
        android:id="@+id/imageView"
        android:layout_marginTop="7dp"
        android:layout_below="@+id/list_textView_date"
        android:layout_alignParentStart="true"
        android:src="@drawable/line" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/imageView4"
        android:src="@drawable/gps"
        android:layout_above="@+id/list_textView_date"
        android:layout_alignStart="@+id/list_textView_eventName" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/imageView5"
        android:src="@drawable/calendar"
        android:layout_alignTop="@+id/list_textView_date"
        android:layout_alignStart="@+id/imageView4" />

</RelativeLayout>